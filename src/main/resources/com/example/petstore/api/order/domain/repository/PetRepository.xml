<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.petstore.api.order.domain.repository.PetRepository">

    <select id="checkPetExists">
        SELECT
            count(id) > 0
        FROM
            pets
        WHERE
            id= #{petId}
    </select>

    <update id="updateStatus">
        UPDATE
            pets
        SET
            status = #{status}
        WHERE
            id = #{id}
    </update>
</mapper>